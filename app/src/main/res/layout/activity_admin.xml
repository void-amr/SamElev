<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F8C8C"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/btnUser"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#082F54"
        android:gravity="center"
        android:text="Update User"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAttendance"
        app:layout_constraintEnd_toStartOf="@+id/btnTasks"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnTasks"
        android:layout_width="155dp"
        android:layout_height="62dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#082F54"
        android:fontFamily="@font/asap_semibold"
        android:gravity="center"
        android:text="Tasks"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAttendance"
        android:layout_width="148dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="196dp"
        android:backgroundTint="#082F54"
        android:gravity="center"
        android:text="Attendance"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAnnounce"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,NotSibling" />

    <Button
        android:id="@+id/btnAnnounce"
        android:layout_width="161dp"
        android:layout_height="62dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#082F54"
        android:gravity="center"
        android:text="Announce"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTasks"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/inquiryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inquirydata"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnnounce" />
</androidx.constraintlayout.widget.ConstraintLayout>